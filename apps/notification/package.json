{
  "name": "@vistone-server/notification",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "targets": {
      "build": {
        "executor": "@nx/esbuild:esbuild",
        "outputs": [
          "{options.outputPath}"
        ],
        "defaultConfiguration": "production",
        "options": {
          "platform": "node",
          "outputPath": "apps/notification/dist",
          "format": [
            "cjs"
          ],
          "bundle": false,
          "main": "apps/notification/src/main.ts",
          "tsConfig": "apps/notification/tsconfig.app.json",
          "assets": [
            "apps/notification/src/assets"
          ],
          "esbuildOptions": {
            "sourcemap": true,
            "outExtension": {
              ".js": ".js"
            }
          }
        },
        "configurations": {
          "development": {},
          "production": {
            "esbuildOptions": {
              "sourcemap": false,
              "outExtension": {
                ".js": ".js"
              }
            }
          }
        }
      },
      "prune-lockfile": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "executor": "@nx/js:prune-lockfile",
        "outputs": [
          "{workspaceRoot}/apps/notification/dist/package.json",
          "{workspaceRoot}/apps/notification/dist/package-lock.json"
        ],
        "options": {
          "buildTarget": "build"
        }
      },
      "copy-workspace-modules": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "outputs": [
          "{workspaceRoot}/apps/notification/dist/workspace_modules"
        ],
        "executor": "@nx/js:copy-workspace-modules",
        "options": {
          "buildTarget": "build"
        }
      },
      "prune": {
        "dependsOn": [
          "prune-lockfile",
          "copy-workspace-modules"
        ],
        "executor": "nx:noop"
      },
      "prisma:generate": {
        "executor": "nx:run-commands",
        "cache": true,
        "inputs": ["{projectRoot}/prisma/schema.prisma"],
        "outputs": ["{workspaceRoot}/node_modules/.prisma/notification-client"],
        "options": {
          "command": "npx prisma generate --config=apps/notification/prisma.config.ts",
          "cwd": "{workspaceRoot}"
        }
      },
      "prisma:push": {
        "executor": "nx:run-commands",
        "cache": false,
        "options": {
          "command": "npx prisma db push --config=apps/notification/prisma.config.ts --accept-data-loss",
          "cwd": "{workspaceRoot}"
        }
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "prisma:generate",
          "build"
        ],
        "options": {
          "buildTarget": "@vistone-server/notification:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@vistone-server/notification:build:development"
          },
          "production": {
            "buildTarget": "@vistone-server/notification:build:production"
          }
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      }
    }
  },
  "dependencies": {
    "express": "^4.21.2",
    "nodemailer": "^6.9.16"
  }
}
